---
import Layout from "../layouts/Layout.astro"
import BlogPost from "../components/BlogPost.astro"
const blogTitle = 'Mi blog de Astro aprendizaje'
const allPosts = await Astro.glob('../pages/posts/*.md')
---
<Layout pageTitle={blogTitle}>
  <p>Aquí es donde publicaré sobre mi viaje de aprendizaje Astro.</p>
  <ul>
    <!-- <li><a href="/posts/post-1/">Publicación 1</a></li>
    <li><a href="/posts/post-2/">Publicación 2</a></li>
    <li><a href="/posts/post-3/">Publicación 3</a></li> -->
    {allPosts.map( post => <BlogPost url={post.url} title={post.frontmatter.title} />)}
  </ul>
</Layout>
---
import Proyectos from "../sections/Proyectos.astro"
import Hero from "../sections/Hero.astro"
import Layout from "../layouts/Layout.astro"
import ItemSeparated from '../components/ItemSeparated.astro';
import SectionContainer from '../components/SectionContainer.astro';
import Formacion from '../sections/Formacion.astro';
import AboutSection from '../sections/AboutSection.astro'
import Contacto from "../sections/Contacto.astro";
import Footer from "../sections/Footer.astro";
---
<Layout>
  <main>
    <Hero/>
    <Proyectos/>
    <!-- <ItemSeparated color="fill-secundary/60" type="wave"/> -->

    <SectionContainer id="experiencia">
      <Formacion/>
    </SectionContainer>
    
    <section class="bg-gradient-to-b from-secundary/60 to-primary to-90%">
      <ItemSeparated color="fill-primary" type="triangulo"/>
      <SectionContainer id="about">
        <AboutSection/>
      </SectionContainer>
    </section>

    <SectionContainer id="contacto">
      <Contacto/>        
    </SectionContainer>
    
    <SectionContainer id="footer">
      <Footer/>
    </SectionContainer> 
    
  </main>    
</Layout>
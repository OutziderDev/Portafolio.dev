---
const { clases} = Astro.props;
---

<div class={`p-6 overflow-hidden bg-black border border-gray-400/30 max-w-xs relative rounded-3xl card-spotlight ${clases}`} data-spotlight>
  <slot />
</div>

<script is:inline>
  document.addEventListener("DOMContentLoaded", () => {
    const card = document.querySelector("[data-spotlight]");

    if (!card) return;

    card.addEventListener("mousemove", (e) => {
      const rect = card.getBoundingClientRect();
      const x = e.clientX - rect.left;
      const y = e.clientY - rect.top;

      card.style.setProperty("--mouse-x", `${x}px`);
      card.style.setProperty("--mouse-y", `${y}px`);
      card.style.setProperty("--spotlight-color", "rgba(255,0,0,0.5)");
    });
  });
</script>

<style>
  .card-spotlight::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(circle at var(--mouse-x) var(--mouse-y), var(--spotlight-color), transparent 80%);
    opacity: 0;
    transition: opacity 0.5s ease;
    pointer-events: none;
  }

  .card-spotlight:hover::before,
  .card-spotlight:focus-within::before {
    opacity: 0.6;
  }
</style>

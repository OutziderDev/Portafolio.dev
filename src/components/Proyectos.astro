---
import Cards from './ProyectoCards.astro'
import { proyectos } from '../consts/proyectos'
import SectionContainer from './SectionContainer.astro'
import ItemSeparated from './ItemSeparated.astro'
---
<section >
  <ItemSeparated color="fill-secundary/60" type="wave"/>

  <div class="bg-secundary/60">
    <SectionContainer id="proyectos" >
      <div class="mb-52 ">
        <h2 class="text-white font-bold text-4xl lg:text-6xl my-12">&lt; Proyectos /&gt;</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 md:grid-rows-2 gap-4">
          {proyectos.map( proyecto => <Cards {...proyecto}/>)}
        </div>
      </div>
    </SectionContainer>
  </div>

  <ItemSeparated color="fill-secundary/60" type="slice"/>

</section>
---
import '../styles/global.css'
import Header from '../sections/Header.astro';
import Analytics from '@vercel/analytics/astro'
const pageTitle = 'Luis Barrios - Portafolio Dev'
---
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{pageTitle}</title>
    
    <link rel="icon" type="image/svg+xml" href="/favicon/favicon.svg" />

    <!-- Analiticas -->
    <Analytics />

    <!-- OG Meta Tags -->
    <meta property="og:url" content="https://portafolio-dev-bay.vercel.app/">
    <meta property="og:type" content="website">
    <meta property="og:title" content="Luis Barrios - Portafolio Dev">
    <meta property="og:description" content="Bienvenido a mi portafolio digital, un espacio donde presento mis proyectos, habilidades y experiencia de forma accesible y profesional.">
    <meta property="og:image" content="https://portafolio-dev-bay.vercel.app/og/OG.jpg">

    <!-- X Meta Tags -->
    <meta name="twitter:card" content="summary_large_image">
    <meta property="twitter:domain" content="portafolio-dev-bay.vercel.app">
    <meta property="twitter:url" content="https://portafolio-dev-bay.vercel.app/">
    <meta name="twitter:title" content="Luis Barrios - Portafolio Dev">
    <meta name="twitter:description" content="Bienvenido a mi portafolio digital, un espacio donde presento mis proyectos, habilidades y experiencia de forma accesible y profesional.">
    <meta name="twitter:image" content="https://portafolio-dev-bay.vercel.app/og/OG.jpg">

    <meta name="description" content="Bienvenido a mi portafolio digital, un espacio donde presento mis proyectos, habilidades y experiencia de forma accesible y profesional.">
    
    <link rel="canonical" href="https://portafolio-dev-bay.vercel.app/">

    <!-- Precargas -->
    <link rel="preload" href="/fonts/Montserrat.woff2" as="font" type="font/woff2" crossorigin="anonymous">
    <link rel="preload" href="/fonts/Mukta.woff2" as="font" type="font/woff2" crossorigin="anonymous">
    <link rel="preload" href="/files/perfil.webp" as="image" type="image/webp" crossorigin="anonymous">
    <link rel="preload" href="/files/perroProgramador.webp" as="image" type="image/webp" crossorigin="anonymous">
  </head>
  <body class="bg-primary">
    <Header/>
    <slot/>
  </body> 
</html>

<style>
  html{
    scroll-behavior: smooth;
  }
  body {
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
  }
</style>

<header class="fixed top-0 w-full h-20 z-50  font-bold select-none">
  <div class="max-w-[1260px] mx-auto h-full flex justify-between items-center p-2">
    <a href="/#hero" class="text-2xl text-white ">&lt; Luis Barrios /&gt;</a>

    <button class="md:hidden" aria-label="Menú de navegación" id="menu-btn">
      <svg class="w-7 h-7 stroke-white" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M4 6h16M4 12h16m-7 6h7" />
      </svg>
    </button>

    <nav class="hidden md:flex gap-4 text-xl [&>a]:text-white [&>a:hover]:text-gray-300">
      <a href="/#experiencia" class="group">
        Formación
        <span class="block w-0 h-0.5 bg-gray-300 group-hover:w-full transition-all duration-300"></span>
      </a>
      <a href="/#proyectos"  class="group">
        Proyectos
        <span class="block w-0 h-0.5 bg-gray-300 group-hover:w-full transition-all duration-300"></span>
      </a>
      <a href="/#about"  class="group">
        Sobre Mí
        <span class="block w-0 h-0.5 bg-gray-300 group-hover:w-full transition-all duration-300"></span>
      </a>
      <a href="/#contacto"  class="group">
        Contacto
        <span class="block w-0 h-0.5 bg-gray-300 group-hover:w-full transition-all duration-300"></span>
      </a>
    </nav>
  </div>
</header>  

<!-- Menú móvil -->
<div id="menu-movil" role="navigation" aria-label="Menú móvil"  class="md:hidden hidden fixed inset-0 z-40 bg-black/70 backdrop-blur-lg pt-40 w-full h-screen [&>a]:text-white [&>a:hover]:text-gray-300  mobile-animation">
  <nav class="text-center text-white text-2xl flex flex-col gap-4">
    <a href="/#experiencia" class="group">
      Formación
      <span class="block w-0 group-hover:w-full transition-all duration-300 h-0.5 bg-gray-300"></span>
    </a>
    <a href="/#proyectos" class="group">
      Proyectos
      <span class="block w-0 group-hover:w-full transition-all duration-300 h-0.5 bg-gray-300"></span>
    </a>
    <a href="/#about" class="group">
      Sobre Mí
      <span class="block w-0 group-hover:w-full transition-all duration-300 h-0.5 bg-gray-300"></span>
    </a>
    <a href="/#contacto" class="group">
      Contacto
      <span class="block w-0 group-hover:w-full transition-all duration-300 h-0.5 bg-gray-300"></span>
    </a>
  </nav>
</div>

<style>
  header {
    animation: header-blur-scroll 0.3s linear forwards;
    animation-timeline: scroll();
    animation-range: 0 350px;
  }

  .mobile-animation {
    animation: moveToRigh 0.3s ease-in-out;
  }

  @keyframes moveToRigh {
    0% {
      opacity: 0;
      transform: translate(-300px,0);
    }
    100% {
      opacity: 1;
      transform: translate(0,0);
       
    }
  }

  @keyframes header-blur-scroll {
    0% {
      backdrop-filter: blur(0px);
      background: transparent;
    }

    100% {
      backdrop-filter: blur(5px);
      background: #000;
      box-shadow: 1px 1px 5px #0003;
      height: 70px;
      width: 100%;
    }
  }
</style> 

<script>
  document.addEventListener('DOMContentLoaded', ()=> {
    const botonMenu = document.getElementById("menu-btn")
    const menuMovil = document.getElementById("menu-movil")

    botonMenu?.addEventListener('click', ()=> {
      menuMovil?.classList.toggle("hidden")
    })

    const links = document.querySelectorAll("#menu-movil a")
    links.forEach( link => {
      link.addEventListener('click', ()=>{
        menuMovil?.classList.toggle('hidden')
      })
    })
  })
</script>